#!/bin/sh

set -eu

#######################################
# git spec
# Globals:
#   SCRIPT
# Arguments:
#  None
#######################################
spec() {
  cat <<EOF
${GIT_COMMAND}
${COLOR_SCRIPT} [$(git magenta "<path>")]

${COLOR_SCRIPT} - is git repository $(git magenta "<path>") \
--
h,help    Show help and exit.
EOF
}

#######################################
# is git repository
# Arguments:
#  [<path>]     path (default: cwd)
#######################################
main() {
  for arg; do
    case "${arg}" in
    -h|--help) . git-parse.sh || exit ;;
    esac
  done

  git ${1:+-C "$(git dirname "$1")"} top  >/dev/null 2>&1;
}

main "$@"
