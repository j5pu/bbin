#!/bin/sh

#
# is macOS?

set -eu

#######################################
# show usage
# Arguments:
#   1
#######################################
help() {
  test $# -gt 0 || return 0

  case "$1" in
    -h|--help|help) rc=0 ;;
    *)
      >&2 echo "${0##*/}: $1: invalid option/argument"
      >&2 echo
      ;;
  esac

  >&2 cat <<EOF
usage: ${0##*/}
   or: ${0##*/} [-h|--help|help]

default \$PATH value

Commands:
   -h, --help, help   display this help and exit.

Output:
  $($0)
EOF
  exit "${rc:-1}"
}

#######################################
# checks if running on macOS
# Arguments:
#  None
# Returns:
#   0 running on macOS
#   1 if not
#######################################
main() {
  help "$@"

  echo "/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin"
}

main "$@"
